{{> header-block}}
<div class=" container">
    <div class="card row">
        <div class="row">
        <h3 class="center-align">All Games</h3>

    
 {{> users-dropdown}}   
</div>
        <div class="col m10">
        {{#each gameunits}}

        <div class="col s5 m3">
            <div class="card small blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title"></span>

                    <p>{{id}}</p>
                    <ul>
                        {{#User}}
                        <li>{{name}}</li>
                        <li>{{email}}</li>
                        {{/User}}
                    </ul>
                    
                     {{#unless rented}}
                     {{> rent-block rent=false}}
                      {{/unless}}
                     {{#if rented}}
                    {{> rent-block rent=true}}
                     {{/if}}
                

                </div>
                <div class="card-action center-align">              
                    <button class="btn waves-effect waves-light orange" id="delete-game" data-id="{{this.id}}">DELETE!</button>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
