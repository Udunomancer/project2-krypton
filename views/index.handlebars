{{> header-block}}
<div class="row">
    <div class="col l3"></div>
    <div class="col l6 s12">
        <main>
            <div class="container">
                <div class="section">
                    <img class="responsive-img" src="/assets/imgs/ticket_to_ride.jpg">
                </div>
                <div class="section">
                    <form class="search-games">
                        <div class="card">
                            <div class="card-content">
                                <input type="text" id="search-term" placeholder="Board Game Title">
                            </div>
                            <div class="card-action">
                                <button class="btn waves-effect waves-light orange" type="submit"
                                    id="search-submit">Search
                                    <i class="material-icons right">send</i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </main>
    </div>
    <div class="col l3"></div>
</div>

